{
  "extends": [ "next/core-web-vitals", "airbnb", "plugin:prettier/recommend" ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "max-len": [ "error", { "code": 140 } ],
    "quotes": [ 2, "single", { "avoidEscape": true } ]
  }
}